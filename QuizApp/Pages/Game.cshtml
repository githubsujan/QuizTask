@page
@model QuizApp.Pages.GameModel
@{
    ViewData["Title"] = "Game";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
    <div class="row" style="display:none;" id="divLogout">
        <div class="col-md-4">
            <button class="btn btn-danger form-control" id="btnLogout">Logout</button>
        </div>
    </div>
<h2 class="text-info pt-2 pb-3">General Quiz</h2>

@foreach (var item in Model.listQuiz)
{
    <div class="row backgroundWhite border">
        <div class="col-md-8">
            <div><br />
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <h4>Question @item.QuestionID: <p>@item.Question</p></h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <input type="radio" value="@item.Option1" name="@item.QuestionID" id="option1" class="rb" correct_val="@item.CorrectOption" /> @item.Option1
                    </div>
                    <div class="col-md-6">
                        <input type="radio" value="@item.Option2" name="@item.QuestionID" id="option2" class="rb" correct_val="@item.CorrectOption" /> @item.Option2
                    </div>
                    <div class="col-md-6">
                        <input type="radio" value="@item.Option3" name="@item.QuestionID" id="option3" class="rb" correct_val="@item.CorrectOption" /> @item.Option3
                    </div>
                    <div class="col-md-6">
                        <input type="radio" value="@item.Option4" name="@item.QuestionID" id="option4" class="rb" correct_val="@item.CorrectOption" /> @item.Option4
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label name="@item.QuestionID" class="badge badge-success" style="display:none;font:bold;">@item.CorrectOption</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="form-group">
    <div class="row">
        <div class="col-4">
            <br />
            <button class="btn btn-success form-control" id="btnSubmit">Submit</button>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/CustomScripts/Game.js"></script>
}

